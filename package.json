{
  "name": "tudogestao-plus",
  "version": "1.0.0",
  "description": "Sistema ERP Financeiro Completo - TudoGestão+",
  "type": "module",
  "main": "electron/main.js",
  "author": "Michael Santos <michael@tudogestao.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "vite build",
    "build:electron": "electron-builder",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "setup": "node scripts/setup-database.js",
    "seed": "node scripts/seed-demo-data.js",
    "backup": "node scripts/backup-scheduler.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.303.0",
    "morgan": "^1.10.0",
    "node-machine-id": "^1.1.12",
    "node-schedule": "^2.1.1",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.21.1",
    "recharts": "^2.10.3",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^38.4.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prisma": "^5.7.0",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tudogestao.plus",
    "productName": "TudoGestão+",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "dist/**/*",
      "prisma/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/icon.png"
    }
  }
}
